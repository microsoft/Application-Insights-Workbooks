            "isRequired": true,
            "typeSettings": {
              "additionalResourceOptions": [],
              "showDefault": false
            },
            "jsonData": "[\r\n    { \"value\":\"All\", \"label\":\"All\", \"selected\": true },\r\n    { \"value\":\"0\", \"label\":\"0\" },\r\n    { \"value\":\"1\", \"label\":\"1\" },\r\n    { \"value\":\"2\", \"label\":\"2\" },\r\n    { \"value\":\"3\", \"label\":\"3\" },\r\n    { \"value\":\"4\", \"label\":\"4\" },\r\n    { \"value\":\"5\", \"label\":\"5\" }\r\n]",
