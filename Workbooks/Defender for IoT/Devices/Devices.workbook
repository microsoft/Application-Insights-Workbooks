                  {
                    "id": "f38f0c59-0451-4510-a647-d3b95ea76e66",
                    "version": "KqlParameterItem/1.0",
                    "name": "SiteName",
                    "label": "Site name",
                    "type": 2,
                    "isRequired": true,
                    "multiSelect": true,
                    "quote": "'",
                    "delimiter": ",",
                    "query": "iotsecurityresources\r\n| where type == \"microsoft.iotsecurity/locations/devicegroups/devices\"\r\n| extend Site=properties.sensor.site\r\n| where Site!=''\r\n| summarize by tostring(Site)",
                    "crossComponentResources": [
                      "value::all"
                    ],
