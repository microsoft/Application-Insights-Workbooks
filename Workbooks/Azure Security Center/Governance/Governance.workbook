e , owner, iif(hasAssignment == false, owner, \"Unspecified\"))\r\n| where '{selectedOwner}' == '' or (selectedOwner contains owner and hasAssignment == true)\r\n| extend splitedId = split(tolower(id), \"microsoft.security/securityconnectors\")\r\n| project [\"Resource\"] = resourceId, Scope = iff(tolower(id) has \"securityconnectors\", strcat(splitedId[0], \"microsoft.security/securityconnectors\", split(splitedId[1], \"/securityentitydata\")[0]), tostring(subscriptionId)) ,Status = assignmentStatus, Owner = owner, [\"Due date\"] = remediationDueDate, [\"Grace period enabled\"] = isGrace\r\n| sort by Status desc",
