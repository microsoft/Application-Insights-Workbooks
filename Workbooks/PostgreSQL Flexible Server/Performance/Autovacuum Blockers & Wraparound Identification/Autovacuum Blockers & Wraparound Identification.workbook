                          "metrics": [
                            {
                              "namespace": "microsoft.dbforpostgresql/flexibleservers",
                              "metric": "microsoft.dbforpostgresql/flexibleservers-Replication (Preview)-physical_replication_delay_in_bytes",
                              "aggregation": 3,
                              "splitBy": null,
