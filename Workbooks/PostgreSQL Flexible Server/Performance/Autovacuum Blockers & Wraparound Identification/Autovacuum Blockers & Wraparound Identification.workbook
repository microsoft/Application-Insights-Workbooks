          {
            "id": "7be8162a-9d4b-40bb-9146-4aa22dc4fea1",
            "version": "KqlParameterItem/1.0",
            "name": "WorkbookNecessary",
            "type": 1,
            "query": "let Start_Time = todatetime('{GlobalStartTime}');\r\nlet End_Time = todatetime('{GlobalEndTime}');\r\n\r\nlet prep_statements =\r\nprint prepared='{isPreparedXactsUsed}'\r\n| project isneccesary=iff(prepared==\"Yes\", \"Yes\", \"No\")\r\n| project isneccesary;\r\n\r\nlet sessions =\r\nAzureDiagnostics\r\n| where TimeGenerated >= Start_Time and TimeGenerated <= End_Time\r\n| where Category ==\"PostgreSQLFlexSessions\"\r\n| where Usesysid_d != 10\r\n| where isnotempty(Datid_d) and Database_name_s !in('azure_sys','azure_maintenance')\r\n| where State_s !='idle'\r\n| extend Transaction_duration_ms=datetime_diff('Millisecond',todatetime(Collection_time_t),todatetime(Xact_start_t))\r\n| summarize Transaction_duration_ms=max(Transaction_duration_ms)\r\n| where Transaction_duration_ms > toint({MIN_XACT_TIME_MS_THRESHOLD_FOR_LONG_XACTS}) \r\n|count\r\n| extend isneccesary = iff((Count) >= 1 , \"Yes\", \"No\")\r\n| project isneccesary;\r\n\r\nlet ReadReplica=print isneccesary='{IsServerHavingReplica}';\r\n\r\n\r\nprep_statements | union sessions,ReadReplica\r\n|where isneccesary =='Yes'\r\n|count\r\n| extend WorkbookNecessary = iff(Count > 0, 'Yes', 'No')\r\n| project WorkbookNecessary",
            "crossComponentResources": [
              "{Resource}"
            ],
            "queryType": 0
          },
